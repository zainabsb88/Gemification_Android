<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rootflyinfo.com.gamification.Description$PlaceholderFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Características"
        android:textColor="#000"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="fill_horizontal"
        android:lineSpacingMultiplier="1.5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="O  processador DIGIC 5 e a sensibilidade luminosa de 12 800 ISO extensível até 256 000 ISO ajudam o utilizador a tirar o melhor partido da EOS 700D. Esta reflex Canon grava imagens definidas e cores luminosas, apesar de um curto tempo de exposição ou de más condições de utilização.\n\nO seu sistema autofocus contínuo, disponível igualmente em modo de vídeo HD 1080p, contribui para melhorar o resultado visual."
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView11"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/drawable_temp_cameraback" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView12"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:src="@drawable/drawable_temp_camerafront"
        />

        </RelativeLayout>
        </ScrollView>
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:gravity="right"
        android:text="SEGUINTE"
        android:background="@drawable/button_rounded_gray"
        android:textColor="@color/green"
        android:drawableRight="@mipmap/ic_arrow_button"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:gravity="left"
        android:text="VOLTAR"
        android:background="@drawable/button_rounded_gray"
        android:textColor="#D0D2D3"
        android:drawableLeft="@mipmap/ic_arrow_button_left"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
