<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/yellow"
    android:id="@+id/tipinfo_back"
    android:padding="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:id="@+id/tipinfo_for"
        android:background="@drawable/round_corner"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView22"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:background="@drawable/circle_grey"
            android:src="@mipmap/ic_info_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Professional for Amature"
            android:textColor="#6d6e71"
            android:id="@+id/textView35"
            android:layout_below="@+id/imageView22"
            android:layout_marginTop="44dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="The EOS 700D offers a full and solid basic performance that is clearly one of the best in any entry level DSLR."
            android:textColor="#6d6e71"
            android:id="@+id/textView36"
            android:layout_below="@+id/textView35"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_above="@+id/textView37"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView37"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:id="@+id/imageView23"
            android:layout_toLeftOf="@+id/textView37"
            android:layout_toStartOf="@+id/textView37"
            android:background="@drawable/circle_blue"
            android:src="@mipmap/ic_msg"
            android:padding="10dp"
            android:layout_below="@+id/textView36" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView24"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView37"
            android:layout_toEndOf="@+id/textView37"
            android:background="@drawable/circle_green"
            android:src="@mipmap/ic_like"
            android:padding="10dp"
            android:layout_below="@+id/textView36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12"
            android:textColor="@color/blue"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/textView38"
            android:layout_alignRight="@+id/imageView23"
            android:layout_alignEnd="@+id/imageView23"
            android:layout_below="@+id/imageView23"
            android:layout_alignLeft="@+id/imageView23"
            android:layout_alignStart="@+id/imageView23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="22"
            android:textColor="@color/green"
            android:gravity="center"
            android:id="@+id/textView39"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imageView24"
            android:layout_alignLeft="@+id/imageView24"
            android:layout_alignStart="@+id/imageView24"
            android:layout_alignRight="@+id/imageView24"
            android:layout_alignEnd="@+id/imageView24" />

    </RelativeLayout>
</RelativeLayout>
