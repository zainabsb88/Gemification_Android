<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/round_corner" android:layout_height="match_parent"
    android:id="@+id/ioii">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView25"
        android:background="@drawable/circle_grey"
        android:src="@mipmap/ic_tf1"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5"
        android:textSize="10sp"
        android:textColor="#fff"
        android:id="@+id/textView40"
        android:background="@drawable/rectangle_yellow"

        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView25"
        android:layout_alignStart="@+id/imageView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView53"
        android:gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imageView25"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
