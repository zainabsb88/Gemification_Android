<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:padding="10dp" android:background="@drawable/round_corner" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView21"
        android:background="@drawable/circle_grey"
        android:src="@mipmap/ic_info_large"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#6d6e71"
        android:layout_marginLeft="10dp"
        android:gravity="start"
        android:id="@+id/textView34"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView21"
        android:layout_toEndOf="@+id/imageView21" />
</RelativeLayout>
