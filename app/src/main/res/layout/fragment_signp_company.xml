<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rootflyinfo.com.aoa.Login$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/white"
        android:id="@+id/relative_login"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:text="Sign In"
            android:gravity="center"
            android:id="@+id/textView43"
            android:autoText="true"
            android:layout_toRightOf="@+id/textView42"
            android:layout_toEndOf="@+id/textView42"
            android:layout_alignTop="@+id/textView42" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Company"
            android:layout_alignParentTop="true"
            android:textAllCaps="true"
            android:id="@+id/textView44"
            android:layout_centerHorizontal="true"
            android:textColor="@color/yellow"
            android:textStyle="normal" />

        <Spinner
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/login_edittext"
            android:id="@+id/spinner2"
            android:entries="@array/company"
            android:layout_below="@+id/textView44"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member? "
            android:gravity="end"
            android:id="@+id/textView42"
            android:layout_below="@+id/textView50"
            android:layout_alignLeft="@+id/textView44"
            android:layout_alignStart="@+id/textView44"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:drawablePadding="10dp"
            android:id="@+id/textView50"
            android:drawableLeft="@mipmap/ic_company_small"
            android:layout_below="@+id/spinner2"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/spinner2"
            android:layout_alignEnd="@+id/spinner2"
            android:layout_alignLeft="@+id/spinner2"
            android:layout_alignStart="@+id/spinner2"
            android:gravity="fill_vertical"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
