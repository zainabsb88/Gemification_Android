<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    tools:context="rootflyinfo.com.aoa.NavigationDrawerFragment">
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listview_nav"
        android:layout_height="100dp" android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#F1F1F2"
        android:elevation="5dp"
        android:paddingTop="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_above="@+id/textView80"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/imageView40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="LOG OUT"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:id="@+id/textView80"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView40"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listview_nav"
        android:layout_alignEnd="@+id/listview_nav"
        android:src="@drawable/abcd" />
</RelativeLayout>
