            <solid android:color="#E6E7E8"/>
            <corners android:radius="60dp"/>
        </shape>

    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/green"/>
                <corners android:radius="60dp"/>
            </shape>
        </clip>
    </item>

</layer-list>